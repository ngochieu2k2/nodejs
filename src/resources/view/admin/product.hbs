
   <section class="flex items-center bg-gray-100 font-poppins dark:bg-gray-800 lg:h-screen">
        <div class="container p-4 mx-auto">
            <h2 class="pb-2 text-2xl font-bold text-center text-gray-800 md:text-4xl dark:text-gray-400">
                Featured Products
            </h2>
            <div class="w-20 mx-auto mb-6 border-b border-red-700 dark:border-gray-400"></div>
            <div id="books" class="flex flex-wrap mb-20 -mx-3">
                
                
            </div>
        </div>
    </section>
    <script>
        fetch('/api/books')
        .then((res) => res.json())
        .then((res)=>{
            viewProduct(res)
        })
        const viewProduct = (data) =>{
            let viewData = data.map(d => `
             <div class="w-full px-3 mb-6 lg:w-1/3 lg:mb-0">
                    <div class="relative w-full h-64 mb-6 bg-center bg-no-repeat bg-cover"
                        style="background-image: url('${d.img}');">
                        <div class="absolute w-full h-full bg-gray-900 bg-opacity-60"></div>
                       
                        <a class="absolute inset-0 flex items-end" href="/admin/product/detail/${d.isbn}">
                            <div class="pb-12 pl-12">
                                <h2 class="mb-2 text-3xl font-bold text-white ">${d.name}</h2>
                                <p class="text-xl font-bold text-white ">
                                    <span>$${d.price}</span>
                                    
                                </p>
                            </div>
                        </a>
                    </div>
                </div>`)
                document.getElementById("books").innerHTML= viewData.join("")

        }
    </script>